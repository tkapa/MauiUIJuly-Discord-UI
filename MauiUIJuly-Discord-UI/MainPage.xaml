<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MauiUIJuly_Discord_UI.Model"
             x:Class="MauiUIJuly_Discord_UI.MainPage">
    <Grid RowDefinitions="*, Auto"
          Padding="10">
        <!--Display Messages-->
        <CollectionView Grid.Row="0"
                        Grid.ColumnSpan="3"
                        VerticalOptions="End">
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type model:Message}">
                    <model:Message ChatMessage="Hello there!" />
                    <model:Message ChatMessage="Hi :)" />
                    <model:Message ChatMessage="Wow this is cool!" />
                </x:Array>
            </CollectionView.ItemsSource>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Message">
                    <HorizontalStackLayout Padding="5">
                        <Label Text="Image"/>
                        <VerticalStackLayout>
                            <Frame>
                                <Label Text="{Binding ChatMessage}" />
                            </Frame>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <!--User Input-->
        <Grid   Grid.Row="1"
                ColumnDefinitions="Auto,Auto,60*,Auto"
                ColumnSpacing="5"
                VerticalOptions="End">
            <Button Text="+"
                Grid.Column="0"
                Grid.ColumnSpan="1"/>
            <Button Text=">"
                Grid.Column="1"
                Grid.ColumnSpan="1"/>
            <Entry Keyboard="Chat" 
               Placeholder="Message #general"
               Grid.Column="2"/>
            <Button Text="Send" 
                Grid.Column="3"/>
        </Grid>
    </Grid>
</ContentPage>
